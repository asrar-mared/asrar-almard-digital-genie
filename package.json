{
  "name": "professional-nodejs-project",
  "version": "1.0.0",
  "description": "مشروع Node.js احترافي مع بنية متكاملة",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "babel src -d dist",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "clean": "rm -rf dist node_modules",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "professional",
    "backend",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "dotenv": "^17.2.3",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^8.2.1",
    "compression": "^1.7.4",
    "joi": "^18.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "nodemon": "^3.0.2",
    "eslint": "^9.39.1",
    "prettier": "^3.1.1",
    "jest": "^30.0.0",
    "supertest": "^7.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
